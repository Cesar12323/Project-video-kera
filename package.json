{
  "name": "project-video",
  "version": "1.0.0",
  "description": "Desktop video rendering application powered by Remotion",
  "author": "Project Video",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 4444",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:4444 && npm run electron:start\"",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:compile": "tsc -p electron/tsconfig.json"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@remotion/player": "^4.0.397",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "remotion": "^4.0.397",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.projectvideo.app",
    "productName": "Project Video",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*.js",
      "out/**/*",
      "remotion-renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "remotion-renderer",
        "to": "remotion-renderer"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
