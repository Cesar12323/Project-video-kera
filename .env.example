# -------------------------
# AI Provider API Keys
# -------------------------
# Only fill in the keys for the providers you plan to use.
# These are OPTIONAL - users can also set them in the app settings.

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT-4)
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# OpenRouter (multi-model gateway)
OPENROUTER_API_KEY=

# -------------------------
# ElevenLabs (Text-to-Speech)
# -------------------------
ELEVENLABS_API_KEY=

# -------------------------
# n8n Integration
# -------------------------
N8N_API_PORT=3333
N8N_INPUT_FOLDER=
N8N_OUTPUT_FOLDER=

# -------------------------
# Application Settings
# -------------------------
# Default output folder for rendered videos
OUTPUT_FOLDER=

# Remotion rendering settings
REMOTION_LOG_LEVEL=info
